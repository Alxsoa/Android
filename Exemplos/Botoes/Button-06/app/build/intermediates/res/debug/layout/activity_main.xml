<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B0C4DE"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/idBtn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/strBotao1"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/idBtn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/strBotao2"
        android:layout_below="@+id/idBtn1"
        android:layout_centerHorizontal="true" />

</RelativeLayout><!-- From: file:/Users/alxsoa/Desktop/Curso_de_Android/Exemplos/Botoes/Button-06/app/src/main/res/layout/activity_main.xml -->