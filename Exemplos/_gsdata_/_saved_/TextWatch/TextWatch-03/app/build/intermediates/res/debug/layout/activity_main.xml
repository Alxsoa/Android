<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B0C4DE"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView1"
        android:layout_marginTop="88dp"
        android:textStyle="bold"
        android:textColor="#520029"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gerador de Senha"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_marginTop="49dp"
        android:textSize="23dp"
        android:id="@+id/editTextPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Digite Sua Senha"
        android:gravity="center_horizontal"
        android:maxLength="20"
        android:layout_below="@+id/textView1"
        android:layout_alignParentStart="true">
        <requestFocus />
    </EditText>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#B8FFB8">
    </LinearLayout>

    <TextView
        android:id="@+id/textViewPassword"
        android:textColor="#000099"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="   Qualidade da Senha :  "
        android:layout_gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textViewPasswordStrength"
        android:textColor="#005C00"
        android:textStyle="bold"
        android:textSize="23dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NÃ£o Definida"
        android:layout_gravity="center_vertical"
        android:layout_alignTop="@+id/textViewPassword"
        android:layout_toEndOf="@+id/textViewPassword" />

</RelativeLayout>
