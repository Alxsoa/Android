<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B0C4DE" >

    <TextView
        android:id="@+id/txtView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edtSenha"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/edtSenha"
        android:layout_marginTop="19dp"
        android:text="Senha" />

    <EditText
        android:id="@+id/edtSenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edtSenhaNumerica"
        android:layout_below="@+id/txtView1"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/txtView2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edtSenha"
        android:layout_alignRight="@+id/edtSenha"
        android:layout_below="@+id/edtSenha"
        android:layout_marginTop="24dp"
        android:text="Senha Numerica" />

    <EditText
        android:id="@+id/edtSenhaNumerica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txtView2"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:inputType="numberPassword" >
    </EditText>

    <Button
        android:id="@+id/btnOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtSenhaNumerica"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:text="OK" />

</RelativeLayout><!-- From: file:/Users/alxsoa/Desktop/Curso_de_Android/Exemplos/EditText/EditText-03/app/src/main/res/layout/activity_main.xml -->