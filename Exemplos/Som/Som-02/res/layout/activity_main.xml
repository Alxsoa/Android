<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B0C4DE"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.som_02.MainActivity" >

    <Button
        android:id="@+id/idBtnPara"
        android:layout_width="110dp"
        android:layout_height="80dp"
        android:layout_alignBaseline="@+id/idBtnMP4"
        android:layout_alignBottom="@+id/idBtnMP4"
        android:layout_alignLeft="@+id/idBtnInicia"
        android:text="Pára Gravação" />

    <Button
        android:id="@+id/idBtnInicia"
        android:layout_width="110dp"
        android:layout_height="80dp"
        android:layout_above="@+id/idBtnPara"
        android:layout_alignRight="@+id/idImgFone"
        android:text="Inicia Gravação" />

    <Button
        android:id="@+id/idBtn3GP"
        android:layout_width="110dp"
        android:layout_height="80dp"
        android:layout_alignLeft="@+id/idImgFone"
        android:layout_below="@+id/idImgFone"
        android:layout_marginTop="28dp"
        android:text="Formato 3GP" />

    <Button
        android:id="@+id/idBtnMP4"
        android:layout_width="110dp"
        android:layout_height="80dp"
        android:layout_alignLeft="@+id/idBtn3GP"
        android:layout_below="@+id/idBtn3GP"
        android:text="Formato MP4" />

    <ImageView
        android:id="@+id/idImgFone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/microfone" />

</RelativeLayout>